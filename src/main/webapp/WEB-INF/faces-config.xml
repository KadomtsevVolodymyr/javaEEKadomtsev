<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="4.0"
              xmlns="https://jakarta.ee/xml/ns/jakartaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-facesconfig_4_0.xsd">
    
    <application>
        <locale-config>
            <default-locale>en</default-locale>
        </locale-config>
    </application>
    
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>books/list</from-outcome>
            <to-view-id>/books/list.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>books/add</from-outcome>
            <to-view-id>/books/add.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>books/edit</from-outcome>
            <to-view-id>/books/edit.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>orders/list</from-outcome>
            <to-view-id>/orders/list.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>orders/add</from-outcome>
            <to-view-id>/orders/add.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>orders/edit</from-outcome>
            <to-view-id>/orders/edit.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>profile</from-outcome>
            <to-view-id>/user/profile.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>profile/edit</from-outcome>
            <to-view-id>/user/edit.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
</faces-config> 